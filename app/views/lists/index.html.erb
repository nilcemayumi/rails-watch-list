<div class="banner" style="background-image: url('https://cdn.stocksnap.io/img-thumbs/960w/auditorium-stadium_7TO5UMVM58.jpg') ;">
  <div class="container">
    <h1 class="text-center">Save any kind of movies</h1>
  </div>
</div>
<div class="container mt-5">
  <div class="d-flex flex-row justify-content-between">
      <h2>My Lists</h2>
      <p><%= link_to "Create a movie list", new_list_path , class: "btn btn-success text-white fw-bolder" %></p>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url( https://www.shutterstock.com/image-photo/movie-projector-on-dark-background-600w-753798850.jpg)">
          <%= link_to list.name, list_path(list) , class: "text-decoration-none text-white"%>
        </div>
    <% end %>
  </div>
</div>
